# Mein IDaaS Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=4000
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here
DB_NAME=idaas
DB_SSLMODE=disable

# JWT Configuration (RSA-256)
# Generate RSA keys with:
# openssl genrsa -out private_key.pem 2048
# openssl rsa -in private_key.pem -pubout -out public_key.pem
RSA_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----
RSA_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----

# JWT Token TTL
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h
JWT_ISSUER=mein-idaas

# Token Rotation Grace Period
REFRESH_GRACE_PERIOD=10s

# Argon2 Password Hashing Parameters
# For development (faster):
# ARGON2_TIME=1
# ARGON2_MEMORY=16384
# ARGON2_THREADS=2
#
# For production (more secure):
# ARGON2_TIME=4
# ARGON2_MEMORY=262144
# ARGON2_THREADS=8
ARGON2_TIME=3
ARGON2_MEMORY=65536
ARGON2_THREADS=4
ARGON2_KEY_LENGTH=32
ARGON2_SALT_LENGTH=16

# SMTP Email Configuration (Using Gmail)
# Note: Use App Password, not your regular Gmail password
# Get App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-16-chars
SMTP_SENDER_NAME=Mein IDaaS

# Application Configuration
APP_NAME=mein-idaas
COOKIE_PATH=/api/v1/auth

# Rate Limiter Configuration
# Current: 10 requests per second, 10 minute ban
RATE_LIMIT_PER_SEC=10
RATE_LIMIT_BAN_MINUTES=10

